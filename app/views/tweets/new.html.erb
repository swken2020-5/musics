<%= form_for @tweet, action: :create do |tweet| %>
    <% if @tweet.errors.present? %>
        <ul>
            <% @tweet.errors.full_messages.each do |error| %>
                <li>
                    <%= error %>
                </li>
            <% end %>
        </ul>
    <% end %>
    <%= tweet.text_area :message %>
    <%= tweet.submit 'ツイート' %>
    <br />
    <%= link_to '戻る', '/' %>
<% end %>